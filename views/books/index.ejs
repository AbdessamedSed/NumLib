<h2 class="page-header">Search Book</h2>
<form action="/books" method="GET">
    <div class="form-element">
        <label for="textInput">Title</label>
        <input id="textInput" type="text" name="title">
    </div>
    <div class="form-element">
        <label for="beforeIn">Published Before</label>
        <input id="beforeIn" type="date" name="publishedBefore">
    </div>
    <div class="form-element">
        <label for="AfterIn">Published After</label>
        <input id="AfterIn" type="date" name="publishedAfter">
    </div>
    <input class="btn-search" type="submit" value="Search">
</form>
<br>
<br>
<div class="books-show">
    <% books.forEach(book => { %>
      <img height="150" width="100" src="<%= book.coverImagePath %>">
      <div class="btn-row">
        <a class="btn btn-primary" href="/books/<%= book.id %>">View</a>
        <a class="btn btn-primary" href="/books/<%= book.id %>/edit">Edit</a>
        <form method="POST" action="/books/<%= book.id %>?_method=DELETE">
            <button class="btn btn-danger" type="submit">Delete</button>
        </form>
      </div>
    <% 

    }) %>
</div>
